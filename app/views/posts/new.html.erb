<div class="row">
   <div class="col">
      <h1>New Post</h1>
    </div>
</div>
<div class="row">
  <%= form_with model: @post do |form| %>
    <div class="col-3 my-1">
      <%= form.label "title", class: "form-label"%>
      <%= form.text_field "title", class: "form-control"%>
    </div>
    <div class="col-3 my-1">
      <%= form.label "description", class: "form-label"%>
      <%= form.text_field "description", class: "form-control"%>
    </div>
    <div class="col-3 my-1">
      <%= form.label "image", class: "form-label"%>
      <%= form.text_field "image", class: "form-control"%>
    </div>
    <div class="my-1">
      <%= form.label "uploaded_image", class: "form-label"%>
      <%= form.file_field "uploaded_image", accept: "image/jpg, image/jpeg, image/png", class: "form-control"%>
    </div>
    <div class="my-3">
      <%= form.label "posted_on" %>
      <%= form.date_field "posted_on" %>
    </div>
    <div class="py-1">
      <%= form.submit %>
    </div>
    <%= form.hidden_field "place_id" %>
  <% end %>
</div>
